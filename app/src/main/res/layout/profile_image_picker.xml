<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/select_profile_image"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_female_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/female_profile_one"
        android:contentDescription="@string/female_profile_one"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/picker_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_female_two"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/image_male_one" />

    <ImageView
        android:id="@+id/image_female_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/female_profile_two"
        android:contentDescription="@string/female_profile_two"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/picker_title"
        app:layout_constraintStart_toEndOf="@id/image_female_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/image_male_two" />

    <ImageView
        android:id="@+id/image_male_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/male_profile_one"
        android:contentDescription="@string/male_profile_one"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/image_female_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_male_two"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/image_male_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/male_profile_two"
        android:contentDescription="@string/male_profile_two"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/image_female_two"
        app:layout_constraintStart_toEndOf="@id/image_male_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
